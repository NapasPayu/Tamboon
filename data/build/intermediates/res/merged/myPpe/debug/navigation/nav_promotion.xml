<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_promotion"
    app:startDestination="@+id/promotionFragment">

    <fragment
        android:id="@+id/promotionFragment"
        android:name="com.lotuss.oneapp.promotion.PromotionFragment">

        <action
            android:id="@+id/action_promotionFragment_to_nav_promotion_event"
            app:destination="@id/nav_promotion_event">

            <argument
                android:name="promotionId"
                android:defaultValue=""
                app:argType="string" />
        </action>

        <action
            android:id="@+id/action_promotionFragment_to_nav_promotion_catalogue"
            app:destination="@id/nav_promotion_catalogue">

            <argument
                android:name="promotionId"
                android:defaultValue=""
                app:argType="string" />

        </action>

        <deepLink app:uri="lotuss://lotuss.com/{country}/{lang}/promotions" />
    </fragment>


</navigation>