<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_coupon_detail"
    app:startDestination="@+id/couponDetailFragment">
    <fragment
        android:id="@+id/couponDetailFragment"
        android:name="com.lotuss.oneapp.coupon.detail.CouponDetailFragment">
        <action
            android:id="@+id/action_couponDetailFragment_to_LoginFragment"
            app:destination="@id/nav_auth">
            <argument
                android:name="updateCurrent"
                app:argType="string" />
        </action>

        <action
            android:id="@+id/action_couponDetailFragment_to_verifyUserFrag"
            app:destination="@id/nav_verifyuser">
            <argument
                android:name="actionName"
                app:argType="string" />
        </action>

        <action
            android:id="@+id/action_couponDetailFragment_to_redemptionDetailFragment"
            app:destination="@id/nav_coupon_redeem"
            app:enterAnim="@anim/slideup"
            app:popExitAnim="@anim/slidedown">
            <argument
                android:name="redeemDetail"
                app:argType="com.lotuss.oneapp.domain.model.RedeemDetail" />
        </action>
        <deepLink app:uri="lotuss://lotuss.com/{country}/{lang}/coupons/{id}" />
    </fragment>
    <argument
        android:name="id"
        app:argType="string" />
</navigation>