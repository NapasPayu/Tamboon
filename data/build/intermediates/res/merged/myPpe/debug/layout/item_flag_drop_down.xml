<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingTop="@dimen/padding9"
        android:paddingBottom="@dimen/padding9"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:tag="layout/item_flag_drop_down_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/icon_itemFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_flag_malaysia"
            android:layout_marginStart="@dimen/padding16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/txt_country"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_16sp"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/padding24"
            android:layout_marginEnd="@dimen/padding16"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/icon_itemFlag"
            app:layout_constraintTop_toTopOf="@+id/icon_itemFlag"
            app:layout_constraintBottom_toBottomOf="@+id/icon_itemFlag"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

         