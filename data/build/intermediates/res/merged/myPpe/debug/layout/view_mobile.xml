<?xml version="1.0" encoding="utf-8"?>

                                                        

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/view_mobile_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cly_mobileView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_stoke_default_with_corners"
            android:paddingTop="@dimen/padding5"
            android:paddingBottom="@dimen/padding5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Spinner
                android:id="@+id/spn_flagMobileView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:background="@android:color/transparent"
                android:layout_marginStart="@dimen/padding19"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/icon_arrowFlagMobileView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_baseline_arrow_drop_down"
                app:layout_constraintTop_toTopOf="@+id/spn_flagMobileView"
                app:layout_constraintBottom_toBottomOf="@id/spn_flagMobileView"
                app:layout_constraintStart_toEndOf="@+id/spn_flagMobileView" />

            <View
                android:id="@+id/view_flagMobileView"
                android:layout_width="@dimen/padding1"
                android:layout_height="0dp"
                android:background="@color/martini"
                android:layout_marginTop="@dimen/padding4"
                android:layout_marginBottom="@dimen/padding4"
                android:layout_marginStart="@dimen/padding5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/icon_arrowFlagMobileView"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/txt_prefixMobileView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextBold"
                android:text=""
                android:layout_marginStart="@dimen/padding8"
                android:textColor="@color/black"
                android:textSize="@dimen/text_large"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@+id/view_flagMobileView"
                app:layout_constraintBottom_toBottomOf="parent" />

            <EditText
                android:id="@+id/txtb_MobileView"
                style="@style/TextBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:inputType="number"
                android:paddingStart="4dp"
                android:paddingTop="@dimen/spacing_small"
                android:paddingBottom="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_small"
                android:textColor="@color/black"
                android:textSize="@dimen/text_large"
                android:text=""
                android:background="@null"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_prefixMobileView"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/txt_descriptionFlagMobileView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Login.mobileNumber.Helptext"
            android:layout_marginStart="@dimen/padding_side"
            android:layout_marginEnd="@dimen/padding_side"
            android:textSize="@dimen/text_10sp"
            android:gravity="center"
            android:textColor="@color/cutty_sark"
            android:layout_marginTop="@dimen/padding5"
            app:layout_constraintTop_toBottomOf="@+id/cly_mobileView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

         