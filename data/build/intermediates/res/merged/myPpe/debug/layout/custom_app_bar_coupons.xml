<?xml version="1.0" encoding="utf-8"?>

                                                        

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp" android:tag="layout/custom_app_bar_coupons_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorSecondary">

            <TextView
                android:id="@+id/txt_titleCustomAppBar"
                style="@style/TextActionBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
